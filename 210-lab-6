#include <iostream>
using namespace std;

const int SIZE = 5; // size of array

// function to enter values into the array
void enterArray(double* arr, int size) {
cout << "Data entry for the array:" << endl;
for (int i = 0; i < size; i++) {
    cout << "     > Element # " << i << ": ";
    cin >> *(arr + i); // pointer arithmetic
    }
    cout << "Data entry complete." << endl;
}

// function to display values in the array
void outputArray(double* arr, int size) {
    cout << "Outputting array elements:";
    for (int i = 0; i < size; i++) {
        cout << *(arr + i) << " "; // pointer arithmetic
    }
    cout << endl;;
    }
    

